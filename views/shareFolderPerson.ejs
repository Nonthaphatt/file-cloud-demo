<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('head') %>
    <title>File cloud</title>
</head>
<body>
    <div class="w-100">
      <div class="w-25 mx-auto mt-5">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name &nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th scope="col" class="col-4">
                Button
              </th>
            </tr>
          </thead>
          <% person.forEach((doc,i) => {%>
            <tbody>
              <tr>
                <th scope="row"><%= i+1%></th>
                <td scope="row"><%= doc['name']%></td>
                <td scope="row">
                  <div class="d-flex">
                    
                    <form method="post"  action="shareFolderPerson">
                      <input  name="path"  value="<%= path %>" hidden/>
                      <input  name="fname"  value="<%= fname %>" hidden/>
                      <input  name="name"  value="<%= doc.name %>" hidden/>
                      <button type="submit" class="btn btn-success me-2">
                        Share
                      </button>
                    </form>
                    
                     
                  </div>
                </td>
              </tr>
            </tbody>
          <%})%>
        </table>
      </div>
        
    </div>
    
</body>
</html>